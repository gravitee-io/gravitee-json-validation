{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "http": {
            "allOf": [
                {
                    "type": "object",
                    "properties": {
                        "connectTimeout": {
                            "type": "integer",
                            "default": 5000
                        }
                    }
                },
                {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "readTimeout": {
                                    "type": "integer",
                                    "default": 10000
                                },
                                "version": {
                                    "type": "string",
                                    "enum": ["HTTP_1_1"]
                                }
                            },
                            "required": ["readTimeout"]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "readTimeout": {
                                    "type": "integer",
                                    "default": 10000
                                },
                                "version": {
                                    "type": "string",
                                    "enum": ["HTTP_2"]
                                }
                            },
                            "required": ["readTimeout"]
                        }
                    ]
                }
            ]
        }
    },
    "required": ["http"]
}
